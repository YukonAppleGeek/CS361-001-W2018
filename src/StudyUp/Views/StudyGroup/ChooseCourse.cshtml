<h1> Create a Study Group </h1>
<br>
<h2> Pick a Class </h2>
<br>
<div class="card-columns">
@{
    foreach (var c in Model.Courses){
        <div class="card text-dark border-warning" style="width: 14rem">
        <div class="card-body">
            <p>@c.Name</p>
            <a href="@Url.Action("Create", new {Id = c.Id})" class="btn btn-primary">Select</a>    
        </div> 
        </div>  

    }
}

</div>

