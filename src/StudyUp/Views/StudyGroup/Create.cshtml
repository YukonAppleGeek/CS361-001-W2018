@model CreateCourseViewModel
<h1> Create a Study Group </h1>
<h2>Please enter remaining info </h2> <br>

<form asp-antiforgery="true" asp-controller="StudyGroup" asp-action="Create">  
    <!-- Not sure if I need to use the account controller or just need to send it to view page -->
    <div class="form-group"> <br>
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" placeholder="ex: Midterm Study">
    </div>
    <div class="form-group">   
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" placeholder="ex: Wenniger 238">
    </div> 
    <div class="form-group">   
        <label asp-for="DateMonth"></label>
        <div class="input-group">
            <input asp-for="DateMonth" class="form-control" placeholder="month">
            <div class="input-group-append">
                <span class="input-group-text">/</span>
            </div>
            <input asp-for="DateDay" class="form-control" placeholder="day">
            <div class="input-group-append">
                <span class="input-group-text">/</span>
            </div>
            <input asp-for="DateYear" class="form-control" placeholder="year">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="StartHour"></label>
        <div class="input-group">
            <input asp-for="StartHour" class="form-control" value="" placeholder="hour">
            <div class="input-group-append">
                <span class="input-group-text">:</span>
            </div>
            <input asp-for="StartMin" class="form-control" value="" placeholder="minute">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Duration"></label>
        <input asp-for="Duration" class="form-control" value="" placeholder="hours">
    </div>
    <div class="form-group">
        <label asp-for="Capacity"></label>
        <input asp-for="Capacity" class="form-control" value="" placeholder="ex: 20">
    </div>
    <div class="form-group">
        <label asp-for="Objectives"></label>
        <input asp-for="Objectives" class="form-control" placeholder="ex: do example problems">
    </div>
    <input type="submit" value="Confirm" class="btn btn-primary">
        <!-- view group is at http://localhost:5000/StudyGroup/view -->
</form>

